package yinzhi.micro_client.activity;

import java.util.ArrayList;
import java.util.List;

import org.w3c.dom.Comment;

import com.lidroid.xutils.ViewUtils;
import com.lidroid.xutils.view.annotation.ViewInject;

import android.os.Bundle;
import android.widget.ListView;
import yinzhi.micro_client.R;
import yinzhi.micro_client.adapter.LxyCommonAdapter;
import yinzhi.micro_client.network.vo.YZCommentVO;

public class CommentActivity extends BaseActivity {

	private LxyCommonAdapter<YZCommentVO> commentListAdapter;

	private List<Comment> datas;

	private Long bookId;

	@ViewInject(R.id.comment_list)
	private ListView listView;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_comment);
		ViewUtils.inject(this);

		bookId = getIntent().getExtras().getLong("courseId");

		if (initData()) {
			commentListAdapter = new CommentListAdapter(this, datas, R.layout.list_item_comment);
			listView.setAdapter(commentListAdapter);
			commentListAdapter.notifyDataSetChanged();
		}
		// TODO 数据获取失败处理
	}

	private Boolean initData() {
		datas = new ArrayList<>();
		datas = this.getIntent().getExtras().getParcelableArrayList("comments");
		if (datas != null) {
			return true;
		}
		return false;
	}

}
