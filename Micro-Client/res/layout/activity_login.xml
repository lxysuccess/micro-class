<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_action_menu"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_action_bar_height"
        android:background="@color/default_action_bar_bg_color"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/login_close"
            android:layout_width="@dimen/default_action_bar_btn_height_width"
            android:layout_height="@dimen/default_action_bar_btn_height_width"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_title"
            android:textColor="@color/default_font_color_2"
            android:textSize="@dimen/default_action_bar_font_size" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="注册"
            android:textColor="@color/default_font_color_2"
            android:textSize="@dimen/default_content_font_size_14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_input_group"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_action_bar_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/register_email" />

            <EditText
                android:id="@+id/login_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="邮箱"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/default_font_color_3"
                android:textSize="@dimen/default_content_font_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_action_bar_height"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1px"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/register_password" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColorHint="@color/default_font_color_3"
                android:textSize="@dimen/default_content_font_size_14" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_do"
        android:layout_width="200dp"
        android:layout_height="@dimen/default_action_bar_height"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/main"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/default_action_bar_font_size" />

</LinearLayout>