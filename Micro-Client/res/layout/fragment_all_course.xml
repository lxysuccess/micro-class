<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/all_course_menu_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_action_bar_height"
        android:background="@color/main"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/all_course_menu_imgbtn"
            android:layout_width="@dimen/default_action_bar_btn_height_width"
            android:layout_height="@dimen/default_action_bar_btn_height_width"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/menu_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="全部分类"
            android:textColor="@color/white"
            android:textSize="@dimen/default_action_bar_font_size" />

        <ImageButton
            android:id="@+id/all_search_imgbtn"
            android:layout_width="@dimen/default_action_bar_btn_height_width"
            android:layout_height="@dimen/default_action_bar_btn_height_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/search" />
    </RelativeLayout>

    <TextView
        android:id="@+id/all_course_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_course_menu_bar"
        android:padding="5dp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/all_course_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/all_course_count"
        android:background="@color/white"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:divider="@color/default_line_color"
        android:dividerHeight="1px" >
    </ListView>

</RelativeLayout>