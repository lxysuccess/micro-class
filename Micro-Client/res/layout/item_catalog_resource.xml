<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/personal_item_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/catalog_restype_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:background="@drawable/left_menu_all" />

    <TextView
        android:id="@+id/catalog_restitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="38dp"
        android:layout_weight="0.9"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/default_font_color_3" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_weight="0.15"
        android:gravity="center_vertical|right"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="13:30"
        android:textColor="@color/front_gray"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/catalog_sign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:background="@drawable/ic_launcher"
        android:visibility="gone" />

</LinearLayout>