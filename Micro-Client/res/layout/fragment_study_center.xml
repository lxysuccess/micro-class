<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="185dp" >

        <RelativeLayout
            android:id="@+id/left_menu_top_wall"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/left_menu_top_wall_bg"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/my_avator"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/my_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_avator"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/left_name_top_wall_username"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_menu_bar"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#00ffffff"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/my_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/menu_bar" />

            <ImageButton
                android:id="@+id/my_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/my_edit" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>