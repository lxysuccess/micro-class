<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="185dp" >

        <RelativeLayout
            android:id="@+id/left_menu_top_wall"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/left_menu_top_wall_bg"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/my_avator"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/my_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_avator"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/left_name_top_wall_username"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/my_menu_bar"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/default_action_bar_height"
            android:background="#00ffffff"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/my_menu"
                android:layout_width="@dimen/default_action_bar_btn_height_width"
                android:layout_height="@dimen/default_action_bar_btn_height_width"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/menu_bar" />

            <ImageButton
                android:id="@+id/my_edit"
                android:layout_width="@dimen/default_action_bar_btn_height_width"
                android:layout_height="@dimen/default_action_bar_btn_height_width"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="1dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/my_edit" />
        </RelativeLayout>
    </FrameLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/my_course_list_swipelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/my_course_list_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" >
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>